<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".smsintersection.SMSIntersectionActivity">

    <Button
        android:id="@+id/btnStartSmsIntersection"
        android:layout_width="378dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="onSmsIntersectionClick"
        android:text="@string/startSmsIntersection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStopSmsIntersection"
        android:layout_width="376dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="onSmsIntersectionClick"
        android:text="@string/stopSmsIntersection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStartSmsIntersection" />

    <TextView
        android:id="@+id/txtSmsContent"
        android:layout_width="373dp"
        android:layout_height="185dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStopSmsIntersection" />
</androidx.constraintlayout.widget.ConstraintLayout>